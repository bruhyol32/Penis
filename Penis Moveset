local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Lade die Animation
local animation = Instance.new("Animation")
animation.AnimationId = "rbxassetid://13497875049" -- Animation-ID hier einfügen

-- Funktion, die beim Respawn des Spielers die Animation abspielt
local function onCharacterAdded(character)
    local humanoid = character:WaitForChild("Humanoid")
    local animator = humanoid:WaitForChild("Animator")
    local playAnimation = animator:LoadAnimation(animation)
    
    -- Animation direkt nach dem Respawn abspielen
    playAnimation:Play()
end

local player = game.Players.LocalPlayer
local playerGui = player.PlayerGui
local hotbar = playerGui:FindFirstChild("Hotbar")
local backpack = hotbar:FindFirstChild("Backpack")
local hotbarFrame = backpack:FindFirstChild("Hotbar")
local baseButton1 = hotbarFrame:FindFirstChild("1").Base
local ToolName1 = baseButton1.ToolName
ToolName1.Text = "Spritzer"
local baseButton2 = hotbarFrame:FindFirstChild("2").Base
local ToolName2 = baseButton2.ToolName
ToolName2.Text = "Penis Schläge"
local baseButton3 = hotbarFrame:FindFirstChild("3").Base
local ToolName3 = baseButton3.ToolName
ToolName3.Text = "Ficken"
local baseButton4 = hotbarFrame:FindFirstChild("4").Base
local ToolName4 = baseButton4.ToolName
ToolName4.Text = "Wix"
local function waitForGui()
    local player = game.Players.LocalPlayer
    local playerGui = player:WaitForChild("PlayerGui")   
    while true do
        local screenGui = playerGui:FindFirstChild("ScreenGui")
        if screenGui then
            local magicHealthFrame = screenGui:FindFirstChild("MagicHealth")
            if magicHealthFrame then
                local textLabel = magicHealthFrame:FindFirstChild("TextLabel")
                if textLabel then
                    textLabel.Text = "ICH WILL TITTENNNNNNN!!!!!!"
                    return
                end
            end
        end
        wait(1)
    end
end


waitForGui()
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local animator = humanoid:WaitForChild("Animator")

-- Die ursprüngliche Animation und die neue Animation, die stattdessen abgespielt werden soll
local originalAnimation = Instance.new("Animation")
originalAnimation.AnimationId = "rbxassetid://10468665991"

local newAnimation = Instance.new("Animation")
newAnimation.AnimationId = "rbxassetid://12509505723" -- Füge hier die ID der neuen Animation ein

-- Funktion, die die Animation ersetzt, wenn die ursprüngliche Animation abgespielt wird
local function onAnimationPlayed(animationTrack)
    if animationTrack.Animation.AnimationId == originalAnimation.AnimationId then
        -- Stoppe die ursprüngliche Animation und spiele die neue ab
        animationTrack:Stop()
        animator:LoadAnimation(newAnimation):Play()
    end
end
-- Starte das Ersetzen, wenn die ursprüngliche Animation abgespielt wird
humanoid.AnimationPlayed:Connect(onAnimationPlayed)

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local animator = humanoid:WaitForChild("Animator")

-- Die ursprüngliche Animation und die neue Animation, die abgespielt wird
local originalAnimation = Instance.new("Animation")
originalAnimation.AnimationId = "rbxassetid://10466974800"

local newAnimation = Instance.new("Animation")
newAnimation.AnimationId = "rbxassetid://15099900787" -- Füge hier die ID der neuen Animation ein

-- Funktion, die die Animation abspielt und nach 2 Sekunden stoppt
local function onAnimationPlayed(animationTrack)
    if animationTrack.Animation.AnimationId == originalAnimation.AnimationId then
        -- Stoppe die ursprüngliche Animation und spiele die neue ab
        animationTrack:Stop()
        
        local newAnimationTrack = animator:LoadAnimation(newAnimation)
        newAnimationTrack:Play()
        
        -- Stoppe die neue Animation nach 2 Sekunden
        task.wait(1.5)
        newAnimationTrack:Stop()
    end
end

-- Starte das Ersetzen, wenn die ursprüngliche Animation abgespielt wird
humanoid.AnimationPlayed:Connect(onAnimationPlayed)
-- Starte das Ersetzen, wenn die ursprüngliche Animation abgespielt wird
humanoid.AnimationPlayed:Connect(onAnimationPlayed)

